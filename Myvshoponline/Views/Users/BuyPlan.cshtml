function Get_PlanFeatures() {
    var _planID = document.getElementById("plan").value;
    var url = "/Users/Get_PlanFeatures/";
        $.ajax({
            url: url,
            data: { PlanID: _planID},
            cache: false,
            type: "GET",
            success: function (data) {

                var html = '';

                $.each(data, function (key, item) {

                    html += '<div class="col-md-6" style="padding-left:15px;line-height:1.5em"> <span style="color:green;"> <i class="fas fa-check" style="color:darkgreen;"></i></span> ' + item.Feature + '<hr style="margin:1px;padding:1px;"></div>';
                  });

                $("#planfeatures").html(html).show();
                document.getElementById("getplanname").value = item.PlanName;
                },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }



function Get_PlanAmount() {
    var _planID = document.getElementById("plan").value;
    var url = "/Users/Get_PlanAmount/";
    $.ajax({
        url: url,
        data: { PlanID: _planID },
        cache: false,
        type: "GET",
        success: function (data) {

            var html1 = '';
            var html3 = '';
            var html4 = '';
            var html5 = '';

            $.each(data, function (key, item) {

                html1 += '<b>' + item.PlanName + '</b> &nbsp; <del class="NairaSign">N</del>' + formatNumber(item.PlanAmount) + '<span style="font-weight:bold">/Month</span>';
                html3 += "FEATURES OF " + item.PlanName;
                html4 += item.PlanName;
                html5 += item.PlanAmount;
            });

            $("#planamountpermonth").html(html1).show();
            $("#nameforfeatures").html(html3).show();
            $("#planname").html(html4).show();
            document.getElementById("totalamount").value = item.Amount;
            document.getElementById("getplanname").value = item.PlanName;
        },
        error: function (reponse) {
            alert("error : " + reponse);
        }
    });
}
</script>

<script type="text/javascript">
    function formatNumber(num) {
        return num.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,')
    }
</script>

