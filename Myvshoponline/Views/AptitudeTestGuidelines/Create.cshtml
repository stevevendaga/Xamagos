@model Myvshoponline.AptitudeTestGuideline

@{
    ViewBag.Title = "Create";
}

<link href="~/TextEditor/jquery-te-1.4.0.css" rel="stylesheet" />
<script type="text/javascript" src="~/TextEditor/jquery-te-1.4.0.js"></script>
<script src="~/TextEditor/jquery-te-1.4.0.min.js"></script>


<div id="content">
    <div class="container">
        <h2 style="font-size:14px;">Create Aptitude Test Guidelines</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <form method="post" action="~/Users/CreateDescription">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="input-icon">
                        <i class="lni-list"></i>
                        <textarea class="Editor" name="Description" style="width:100%"></textarea>
                        @*@Html.TextArea("Description", new { htmlAttributes = new { @class = "Editor", @required = "required" } })*@
                    </div>
                </div>

                <button class="btn btn-common log-btn mt-3">Save</button>
            </form>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        </div></div>

<script type="text/javascript">
$('.Editor').jqte();

// settings of status
var jqteStatus = true;
$(".status").click(function () {
jqteStatus = jqteStatus ? false : true;
$('.Editor').jqte({ "status": jqteStatus })
});
</script>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
