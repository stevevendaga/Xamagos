@model IEnumerable<Myvshoponline.Project>

@{ 
    ViewBag.Title = "Project";
}
<div id="content">
    <div class="container">
        <p>
            <span class="btn btn-default" id="btnProject"> @Html.ActionLink("Create New", "Create")</span>
        </p>
        <table class="table table-striped table-bordered" style="background-color:#EFEFEF; font-size:16px;">
            <tr>
                <th>
                    @Html.DisplayName("Project")
                </th>
                <th>
                    @Html.DisplayName("Description")
                </th>
                <th>
                    @Html.DisplayName("Project Links")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @{
                        string img = item.ProjectID + ".jpg";

                    }
                    @*<a style="color:#0094ff" href="../Personals/UploadPassport?stid=@item.AdmissionNo">*@

                    <td>
                        <a href="~/Projects/Details/?id=@item.ProjectID&@ViewBag.Random@ViewBag.Random">
                            <img src="~/Images/@img" width="50" height="50" style="border-radius:5px" />

                            @Html.DisplayFor(modelItem => item.ProjectName)
                        </a>
                    </td>
                    <td style="max-width:55%;">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectLinks)

                        @* ------Project Modification------ *@

                    </td>
                    <td style="min-width:180px;">
                        <span>
                            <a class="badge badge-dark" style="color:white; padding:4px;" href="~/Projects/UploadLogo/@item.ProjectID">Add Logo</a>
                        </span>

                        <span>
                            <a class="badge badge-warning" style="color:white; padding:4px;" href="~/Projects/Edit/@item.ProjectID">Edit</a>
                        </span>

                        <span>
                            <a class="badge badge-danger" style="color:white; padding:4px;" href="~/Projects/Delete/@item.ProjectID">Delete</a>
                        </span>
                    </td>

                </tr>
                        }
        </table>
        </div></div>