    <script type="text/javascript">
        $(function () {
            $("#shortname").keypress(function (e) {
                var keyCode = e.keyCode || e.which;
                $("#specialchar").html("");
                //Regex for Valid Characters i.e. Alphabets and Numbers.
                var regex = /^[A-Za-z0-9]+$/;
                //Validate TextBox value against the Regex.
                var isValid = regex.test(String.fromCharCode(keyCode));
                if (!isValid) {
                    $("#specialchar").html("Only Alphabets and Numbers allowed.");
                }
                return isValid;
            });

            $("#phone").keypress(function (e) {
                var keyCode = e.keyCode || e.which;
                //$("#specialchar").html("");
                //Regex for Valid Characters i.e. Alphabets and Numbers.
                var regex = /^[0-9]+$/;
                //Validate TextBox value against the Regex.
                var isValid = regex.test(String.fromCharCode(keyCode));
                if (!isValid) {
                    //$("#specialchar").html("Only Alphabets and Numbers allowed.");
                }
                return isValid;
            });
        });

        $("#name").keypress(function (e) {
            var keyCode = e.keyCode || e.which;
            //$("#specialchar").html("");
            //Regex for Valid Characters i.e. Alphabets and Numbers.
            var regex = /^[a-zA-Z0-9_ ]+$/;
            //Validate TextBox value against the Regex.
            var isValid = regex.test(String.fromCharCode(keyCode));
            if (!isValid) {
                //$("#specialchar").html("Only Alphabets and Numbers allowed.");
            }
            return isValid;
        });


        $(document).ready(function () {
            $("#shortname").on('keyup', function (e) {

                //CONVERT TO LOVERCASE
                $('#shortname').val($(this).val().toLowerCase());
                $("#msgshortname2").html("Your Shop URL:<span style='color:#0a92d7;marging:3px'> https://xamagos.com/" + $('#shortname').val() + "</span>");

                var words = $(this).val().length;
                if (words <= 25) {
                    $('#display_count').text(words);
                    $('#word_left').text(25 - words)
                } else {
                    e.preventDefault();
                    if (e.which !== 8) e.preventDefault();
                }

            });
        });

    </script>


    

