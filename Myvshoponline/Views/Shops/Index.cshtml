@model IEnumerable<Myvshoponline.Shop>

@{
    ViewBag.Title = "Index";
    MyvshoponlineEntities db = new MyvshoponlineEntities();
}

<div id="content">
    <div class="container">
        <h4 style="font-size:15px;">Shops [@Model.Count()]</h4>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table id="zero_config" class="table table-responsive" style="color:black;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayName("State")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User.CompanyName)
                    </th>
                    <th>
                        EmailVerify
                    </th>
                    <th>
                        PhoneVerify
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            <a href="~/Orders/ViewSellersSales/?sid=@item.ID">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>  
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>


                        <td>
                            @{ if (item.DateCreated != null)
                                {
                                    var date = string.Format("{0:MMM dd,yyy hh:mm tt}", item.DateCreated);
                                    @date
                                }

                                int sid =Convert.ToInt32(item.StateID);
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CountryRegion.Country) - @db.States.Where(s=>s.ID==sid).Select(s=>s.Name).FirstOrDefault()
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailVerify)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneVerify)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StateID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User.CompanyName)
                    </th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
</div></div>