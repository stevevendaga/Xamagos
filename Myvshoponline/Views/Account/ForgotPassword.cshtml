@model Myvshoponline.Models.ForgotPasswordViewModel

<title>Recover your password?</title>


<section id="content" class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-6 col-xs-12">

                <div class="page-login-form box">
                    <h4>@ViewBag.Title</h4>

                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4 style="font-size:15px;">Enter your Email Address</h4>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-10">
                                @*@Html.TextBox("Email", new { @class = "form-control", @placeholder ="Email Address" })*@
                                <input type="text" class="form-control" name="Email" placeholder="Email Address" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @*<input type="submit" id="btnColor" class="btn btn-default" value="Recover Password" />*@
                                <button type="submit" class="btn btn-success" id="btnColor" >Recover Password</button>
                            </div>
                        </div>
                    }
                    </div></div></div></div></section>

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
