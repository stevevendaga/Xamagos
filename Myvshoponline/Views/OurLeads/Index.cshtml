@model IEnumerable<Myvshoponline.OurLead>

@{
    ViewBag.Title = "Our Leads";
}
<div id="content">
    <div class="container">

        <h2 style="font-size:14px;">Leads [@Model.Count()]</h2>

        <p>
            <a href="~/OurLeads/Create/?id=@Request.QueryString["id"]"> Create New</a>
        </p>
        <table class="table table-responsive" style="color:black;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    Date
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    Location
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @string.Format("{0:MMM dd, yyyy}", item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID,uid=Request.QueryString["id"] }) |
                        <a href="~/OurLeads/Delete/@item.ID?&uid=@Request.QueryString["id"]" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                    </td>
                </tr>
            }

        </table>
        </div></div>
