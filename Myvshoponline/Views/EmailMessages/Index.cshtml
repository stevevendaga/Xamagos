@model IEnumerable<Myvshoponline.EmailMessage>

@{
    ViewBag.Title = "Aptitude Test Guidelines";
}

<div id="content">
    <div class="container">
        <h2 style="font-size:14px;">Email Messages</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table" style="color:black;">
            <tr>
                <th>
                    Identifier
                </th>
                <th>
                    Subject
                </th>
                <th>
                    Message
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.msgKey
                    </td>
                    <td>
                        @Html.Raw(HttpUtility.HtmlDecode(item.Subject))
                    </td>
                    <td>
                        @Html.Raw(HttpUtility.HtmlDecode(item.Message))
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>