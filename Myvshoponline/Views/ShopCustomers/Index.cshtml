@model IEnumerable<Myvshoponline.CustomerShop>

@{
    ViewBag.Title = "Customers";
}
 
<div id="content">
    <h6 style="font-size:14px">
        <a href="~/Users/Dashboard/@ViewBag.UserID"><i class="lni-user"></i> @ViewBag.CompanyName </a> &raquo;<a href="~/Shops/ShopDetails/@ViewBag.ShopID"> @ViewBag.ShopName </a>
    </h6>
    <p>
        <a href="~/ShopCustomers/CreateAdmin/?id=@ViewBag.SID" class="btn btn-common" style="padding:5px">Add New Customer</a> <br /> <b> Customers List [@Model.Count()]</b>
    </p><br />
    <style>
        .table {
            color: black;
        }
    </style>

    <form method="get" action="~/ShopCustomers/Index">

        <div class="row" style="padding-top:5px;">

            <div class="col-lg-12 col-md-6 col-xs-12">
                <div class="widget">
                  
                    <div class="input-group input-group-lg">
                        <input type="hidden" name="id" value="@ViewBag.ShopID" />
                        <input type="text" name="search" class="form-control" style="border:1px solid blue; padding:10px;" required="required" placeholder="Search by name, email or phone number">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit" name="submit" style="width:50px;font-size:14px;">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </form><br />

    <div class="col-lg-12 col-md-6 col-xs-12">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-body" style="padding-top:0px">
                    
                    <table id="zero_config" class="table table-striped table-hover" style="font-size:14px;color:black">
                        <thead>
                            <tr>
                                <th style="padding-left:2px">
                                    @Html.DisplayName("Name")
                                </th>
                                <th style="padding:2px">
                                    @Html.DisplayName("Phone Number")
                                </th>
                                <th style="padding:2px">
                                    @Html.DisplayName("Email")
                                </th>
                                @*<th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>*@
                                @*<th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>*@

                                <th style="padding:2px">
                                    @Html.DisplayName("Status")
                                </th>
                                <th style="padding:2px">
                                    @Html.DisplayName("Date Created")
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                                <tr>
                                    <td style="padding-left:12px">
                                        <a href="~/ShopCustomers/Details/@item.ShopCustomerID?sid=@ViewBag.ShopID">@Html.DisplayFor(modelItem => item.ShopCustomer.Name)</a>
                                    </td>
                                    <td style="padding:2px">
                                        @Html.DisplayFor(modelItem => item.ShopCustomer.PhoneNumber)
                                    </td>
                                    <td style="padding:2px">
                                        @Html.DisplayFor(modelItem => item.ShopCustomer.Email)
                                    </td>
                                    @*<td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>*@
                                    @*<td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>*@

                                    <td style="padding:2px">
                                        @Html.DisplayFor(modelItem => item.ShopCustomer.CustomerStatu.Status)
                                    </td>
                                    <td style="padding:2px">
                                        @{ var d = string.Format("{0:dd MMM, yyyy}", item.Datecreated);

                                        }
                                        @d
                                    </td>
                                    @*<td>
                        @Html.DisplayFor(modelItem => item.Shop.Name)
                    </td>*@
                                    <td>
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.ID })*@
                                        @*@Html.ActionLink("Details", "Details", new { id=item.ID }) |*@
                                        @*@Html.ActionLink("Delete", "Delete", new { id=item.ID })*@
                                    </td>
                                </tr>
                                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th style="padding-left:2px">
                                    @Html.DisplayName("Name")
                                </th>
                                <th style="padding:2px">
                                    @Html.DisplayName("Phone Number")
                                </th>
                                <th style="padding:2px">
                                    @Html.DisplayName("Email")
                                </th>
                                <th style="padding:2px">
                                    @Html.DisplayName("Status")
                                </th>
                                <th style="padding:2px">
                                    @Html.DisplayName("Date Created")
                                </th>

                                <th></th>
                            </tr>
                        </tfoot>

                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    function myFunction(x) {
        if (x.matches) { // If media query matches
            document.getElementsByClassName("table").style.display = "table table-responsive";

  } else {
          
            document.getElementsByClassName("table").style.display = "table";
      }
}

var x = window.matchMedia("(max-width: 600px)")
myFunction(x) // Call listener function at run time
x.addListener(myFunction) // Attach listener function on state changes
</script>